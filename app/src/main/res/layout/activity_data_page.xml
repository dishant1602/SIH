<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#460B4F80"
    tools:context=".DataPage">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="15dp"
        android:layout_marginEnd="20dp"
        android:orientation="vertical"
        app:layout_constraintBottom_toTopOf="@id/nav_datapage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <com.google.android.material.textview.MaterialTextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Yamunotri Temple"
                    android:textColor="#0B4980"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/yam"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/yam" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="How To Reach"
                    android:textColor="#0B4980"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/bycar"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/bycar"
                            android:gravity="center_horizontal|top"
                            android:scaleType="fitXY"
                            android:text="By Car"
                            android:textSize="48sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/byrail"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/bytrain"
                            android:gravity="center_horizontal|top"
                            android:scaleType="fitXY"
                            android:text="By Rail"
                            android:textSize="48sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/byair"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/byair"
                            android:gravity="center_horizontal|top"
                            android:scaleType="fitXY"
                            android:text="By Air"
                            android:textSize="48sp"
                            android:textStyle="bold|italic" />


                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Center of Attraction"
                    android:textColor="#0B4980"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/suryakund"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/suryakund"
                            android:gravity="bottom|center_horizontal"
                            android:scaleType="fitXY"
                            android:text="Suryakund"
                            android:textSize="48sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/taptkund"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/taptkund"
                            android:gravity="bottom|center_horizontal"
                            android:scaleType="fitXY"
                            android:text="Taptkund"
                            android:textSize="48sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/divyashila"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/divyashila"
                            android:gravity="bottom|center_horizontal"
                            android:scaleType="fitXY"
                            android:text="Divyashila"
                            android:textSize="48sp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>
                </HorizontalScrollView>

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="When To Visit"
                    android:textColor="#0B4980"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <ImageView
                    android:id="@+id/time"
                    android:layout_width="match_parent"
                    android:layout_height="300dp"
                    android:layout_marginTop="20dp"
                    android:scaleType="fitXY"
                    app:srcCompat="@drawable/time_yam" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:text="Nearby Destinations"
                    android:textColor="#0B4980"
                    android:textSize="34sp"
                    android:textStyle="bold" />

                <HorizontalScrollView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent">

                        <TextView
                            android:id="@+id/kharsali"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/kharsali"
                            android:gravity="bottom|center_horizontal"
                            android:scaleType="fitXY"
                            android:text="Kharsali"
                            android:textSize="48sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/shanidevmandir"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/shanidevmandir"
                            android:gravity="bottom|center_horizontal"
                            android:scaleType="fitXY"
                            android:text="Shani Dev Mandir"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/hanumanchatti"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/hc"
                            android:gravity="bottom|center_horizontal"
                            android:scaleType="fitXY"
                            android:text="Hanuman Chatti"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />

                        <TextView
                            android:id="@+id/jankichatti"
                            android:layout_width="300dp"
                            android:layout_height="262dp"
                            android:layout_marginRight="20dp"
                            android:layout_weight="1"
                            android:background="@drawable/jc"
                            android:gravity="bottom|center_horizontal"
                            android:scaleType="fitXY"
                            android:text="Janki Chatti"
                            android:textSize="34sp"
                            android:textStyle="bold|italic" />
                    </LinearLayout>
                </HorizontalScrollView>

            </LinearLayout>
        </ScrollView>
    </LinearLayout>

    <LinearLayout
        android:id="@+id/sidemenu_datapage"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="vertical"
        android:visibility="gone"
        app:layout_constraintBottom_toTopOf="@id/nav_datapage"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/main_logo" />

        <LinearLayout
            android:id="@+id/prechop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_precaution" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Precaution"
                android:textColor="#083359"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/faqhop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_faq" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="FAQs"
                android:textColor="#083359"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/tnchop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_tnc" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Terms and Conditions"
                android:textColor="#083359"
                android:textSize="20sp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/aboutushop"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:gravity="center_horizontal"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="30dp"
                android:layout_height="30dp"
                app:srcCompat="@drawable/ic_aboutus" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="About Us"
                android:textColor="#083359"
                android:textSize="20sp" />
        </LinearLayout>

    <LinearLayout
        android:id="@+id/disasterhop"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="35dp"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="30dp"
            android:layout_height="30dp"
            app:srcCompat="@drawable/ic_disastermanagement" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Disaster"
            android:textColor="#083359"
            android:textSize="20sp" />
    </LinearLayout>

    </LinearLayout>
    <LinearLayout
        android:id="@+id/nav_datapage"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/white"
        android:backgroundTint="@color/white"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent">

        <ImageView
            android:id="@+id/datapage_weather"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_weather_unsel" />

        <ImageView
            android:id="@+id/datapage_home"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_home_unsel" />

        <ImageView
            android:id="@+id/datapage_hotel"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_hotel_unsel" />

        <ImageView
            android:id="@+id/datapage_menu"
            android:layout_width="wrap_content"
            android:layout_height="45dp"
            android:layout_weight="1"
            app:srcCompat="@drawable/ic_menu_unsel" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>